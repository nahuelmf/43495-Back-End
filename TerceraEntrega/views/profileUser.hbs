<section class='p-4 bg-light'>
  {{! <h1 class='text-secondary text-center text-success'>GRACIAS POR INICIAR SESION!</h1> }}

  <div class='mb-3'>
    <div>
      <label class='form-label fw-bold text-info fs-3' for='login'>Tus datos son:</label>
      <div >
        usuario:
        {{user.username}}
        <br />
        Nombre:
        {{user.name}}
        <br />
        Direccion:
        {{user.address}}
        <br />
        Edad:
        {{user.age}}
        <br />
        Telefono:
        {{user.phone}}
        <br />
        Imagen:
        {{user.url}}
      </div>
    </div>
    <br />
    <button type='button' class='btn btn-danger'><a href='/logout' style='text-decoration: none;'>Salir</a></button>
  </div>
</section>

<section class='p-4 bg-light'>
  <section>
    <h1 class='text-secondary text-center text-warning'>Bienvenido/a {{user.name}} </h1>
  </section>

</section>

{{! LISTADO PRODUCTOS }}
{{#if productos}}
  <h1 class='text-secondary text-center'>Listado de productos</h1>
  <div class='container'>
    <div class='row'>
      <div class='col'>
        <table class='table table-dark table-striped table-hover align-middle'>
          <thead>
            <tr>
              <th class='text-center'>Nombre</th>
              <th class='text-center'>Precio</th>
              <th class='text-center'>Foto</th>
            </tr>
          </thead>
          <tbody id='productos'>
          </tbody>
        </table>
      </div>
    </div>
  </div>

{{else}}
  <div>
    <h1 class='text-secondary text-center'>Listado de productos</h1>
    <br>
    <h2 class='text-center'>No hay productos</h2>
    <br>
    <div>
      <a href='/'>
        <button class='btn btn-primary d-block mx-auto'> Agregar producto</button>
      </a>
    </div>
  </div>
{{/if}}