<section class='p-4 bg-light'>
  <h1 class='text-secondary text-center text-success'>INICIAR SESIÓN</h1>

  <div class='mb-3'>
    <form action='/login' method='POST'>
      <div>
        <label class='form-label fw-bold text-secondary fs-3' for='login'>Para ingresar, escriba su email y contraseña:</label>
        <input type='text' id='inputUser' name='username' class='form-control' placeholder='Email' required />
        <input type='password' id='inputPass' name='password' class='form-control' placeholder='Contraseña' required />
      </div>
      <br />
      <input type='submit' class='btn btn-primary d-block mx-auto' value='Ingresar!' />
    </form>
    <button type='button' class='btn btn-outline-secondary'><a href='./signup' style='text-decoration: none;'>Registarse</a></button>

  </div>

</section>