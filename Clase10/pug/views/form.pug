include ./layout.pug

- const classLabel = ['form-label', 'fw-bold', 'text-success', 'fs-3']
- const classDiv = ['mb-3']

section.p-4.bg-dark 
    h2.text-success Ingrese Producto
    form(action='/productos' method='POST')
        div(class=classDiv)
            label(class=classLabel for='name') Nombre
            input.form-control(type='text' name='name')
        div(class=classDiv)
            label(class=classLabel for='name') Precio
            input.form-control(type='number' name='price')
        div(class=classDiv)
            label(class=classLabel for='name') Foto URL
            input.form-control(type='url' name='picture')
        div(class=classDiv)
            input.btn.btn-primary(type='submit' value='Enviar')
    div(class=classDiv)
        a(href="./listaproductos")
            button.btn.btn-info Ver Productos